<script>
  function prev(page, totalPage) {
      page = parseInt(page);
      if (page > 1) {
          window.location.href = `/admin-coupon?page=${page - 1}`;
      }
  }

  function next(page, totalPage) {
      console.log('next');
      page = parseInt(page);
      totalPage = parseInt(totalPage);
      if (page < totalPage) {
          window.location.href = `/admin-coupon?page=${page + 1}`;
      }
  }
</script>


<script>
    function deleteCoupon(couponId) {
      console.log(couponId);
      Swal.fire({
        title: 'Are you sure?',
        text: 'Do you want to delete this coupon?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes !',
        cancelButtonText: 'Cancel',
        reverseButtons: true,
      }).then((response) => {
        console.log(response);
        if (response.isConfirmed) {
          $.ajax({
            url: "/deleteCoupon/" + couponId,
            method: 'DELETE',
          }).done(response => {
            Swal.fire("Successfull", `${response.message}`, "success").then(() => {
              location.reload();
            })
          }).fail((error) => {
            Swal.fire("Successfull", `${error.message}`, "success").then(() => {
              location.reload()
            })
          })
        }
      })

    }
  </script>



<script>
    function editCoupon(couponId) {
      console.log("clicked", couponId);
      $.ajax({
        url: "/editCoupon/" + couponId,
        method: 'GET',
      })
        .done((response) => {
          if (response) {
            document.getElementById('couponName1').value = response.couponData.couponName;
            document.getElementById('couponDiscount1').value = response.couponData.discount;
            document.getElementById('couponExpiring1').value = response.couponData.expiryDate;
            document.getElementById('couponId1').value = response.couponData._id;

            $("#editCoupon").modal("show");

          }
        })
        .fail((error) => {
          console.log(error);
        })

    }
  </script>
