    <script>
        function prev(page, totalPage) {
            page = parseInt(page);
            if (page > 1) {
                window.location.href = `/admin-category?page=${page - 1}`;
            }
        }
    
        function next(page, totalPage) {
            console.log('next');
            page = parseInt(page);
            totalPage = parseInt(totalPage);
            if (page < totalPage) {
                window.location.href = `/admin-category?page=${page + 1}`;
            }
        }
    </script>
    <script>
        function editCategory(categoryId) {
            console.log("clicked", categoryId);
            $.ajax({
                url: "/admin-catEditor/" + categoryId,
                method: 'GET',
            })
                .done((response) => {
                    console.log(response);
                    if (response) {
                        document.getElementById('editName').value = response.catData.name;
                        document.getElementById('editDescription').value = response.catData.description;
                        document.getElementById('editId').value = response.catData._id;

                        console.log(response.catData._id)
                        $("#editCategoryModal").modal("show");;

                    }
                })
                .fail((error) => {
                    console.log(error);
                })

        }
    </script>

    <script>
        document.getElementById("editCategoryForm").addEventListener("submit", function (event) {
            event.preventDefault();
            console.log("this is edti");
            let formdata = $(this).serialize();
            $.ajax({
                url: "/editCategory",
                method: "PATCH",
                data: formdata,
                success: (response) => {
                    console.log(response);
                    if (response.status === true) {
                    Toastify({
                        text: "Category Updated",
