                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                }
                },

                
                error: (XHR, error) => {
                    console.log(error);
                }

            })

        })




        function listunlist(id) {
            $.ajax({
                url: ` /listunlist?id=${id}`,
                method: 'PATCH',
                contentType: 'application/json',
                success: function (data) {
                    if (data.success) {
                        location.reload()
                    } else {
                        location.reload()
                    }
                }
            })
        }



        function listunlist(id, clicked, name) {
            Swal.fire({
                title: 'Are you sure?',
                text: ` You are about to ${clicked === 'unlist' ? 'unlist' : 'list'} ${name}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: ` Yes, ${clicked}!`
            }).then((result) => {
                if (result.isConfirmed) {
                   
                    $.ajax({
                        url: `/listUnlist?id=${id}`,
                        method: 'PATCH',
                        contentType: 'application/json',
                        success: function (data) {
                            if (data.success) {
                                
                                Swal.fire({
                                    title: ` User ${clicked}ed!`,
                                    text: `${name} has been ${clicked}ed successfully.`,
                                    icon: 'success',
                                }).then(() => {
                                   
                                    location.reload();
                                });
                            }
                        }
                    });
                }
            });
        }
    </script>
